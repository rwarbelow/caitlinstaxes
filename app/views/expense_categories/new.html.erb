<%- model_class = ExpenseCategory -%>
<h3>Current Expense Categories</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:category_name) %></th>
      <th>Items in category</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @expense_categories.each do |expense_category| %>
      <tr>
        <td><%= link_to expense_category.category_name, expense_category_path(expense_category) %></td>
        <td><%= expense_category.expense_items.count %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_expense_category_path(expense_category), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      expense_category_path(expense_category),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
	<h4>Create New Expense Category</h4>
<%= render :partial => 'form' %>
