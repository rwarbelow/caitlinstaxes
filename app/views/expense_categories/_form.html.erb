<%= form_for @expense_category, :html => { :class => 'form-horizontal' } do |f| %>
      <%= f.text_field :category_name, :placeholder => "Category Name", :class => 'text_field' %>

      <%= f.hidden_field :user_id, :value => current_user.id %>

    <%= f.submit nil, :class => 'btn btn-primary', :value => "Create" %>
<% end %>
